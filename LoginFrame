    //Boton de regresar
    private void jButtonRegresarActionPerformed(java.awt.event.ActionEvent evt) {                                                
        VentanaPrincipal a=new VentanaPrincipal();
        a.setVisible(true);
        this.setVisible(false);
    }                                               

    private void jButtonIniciarSesionActionPerformed(java.awt.event.ActionEvent evt) {                                                     
        String user = jTextFieldUsuario.getText();                
        String pasword = jPasswordField1.getText();                
        Checker check = new Checker();   
        byte type = check.tipoUsuario(user, pasword);
        switch(type){
            case 0:                
                this.setVisible(false);
                VentanaAdministrador newSesionAd = new VentanaAdministrador();
                newSesionAd.setVisible(true);
            case 1:                
                this.setVisible(false);
                VentanaRecoleccion newSesionRec = new VentanaRecoleccion();
                newSesionRec.setVisible(true);
                break;
            case 2:                
                this.setVisible(false);
                VentanaBodega newSesionBod = new VentanaBodega();
                newSesionBod.setVisible(true);
                break;
            case 3:                
                this.setVisible(false);
                VentanaRepartidor newSesionDel = new VentanaRepartidor();
                newSesionDel.setVisible(true);
                break;
            default:            
                jTextFieldUsuario.setText("Usuario o contraseña incorrectos");                
                break;
        }
    }                                                    

